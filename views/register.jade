extends layout

block content
  h1= title
  if errors
    each error in errors
      div.alert.alert-danger= error 
  form#formAddUser(name="adduser",method="post",action="/users/register")
    input#inputUserName(type="text", placeholder="username", name="username")
    input#inputUserEmail(type="text", placeholder="userpassword", name="userpassword")
    button#btnSubmit(type="submit") submit




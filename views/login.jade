extends layout

block content

  head
    title Login:
  body
    h2.page-header Account Login
    form(method='post', action='/users/login')
      .form-group
        label Username
        input.form-control(type='text', name='username', placeholder='Username')
      .form-group
        label Password
        input.form-control(type='password', name='userpassword', placeholder='Password')
      button.btn.btn-default.btn-outline-primary(type='submit') Submit

